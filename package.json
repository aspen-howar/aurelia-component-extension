{
  "name": "new-aurelia-component",
  "displayName": "new-aurelia-component",
  "description": "Create a aurelia component directly when creating a folder",
  "version": "1.1.0",
  "publisher": "howar",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aspen-howar/aurelia-component-extension.git"
  },
  "activationEvents": [
    "onLanguage:html"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "new-aurelia-component.create",
        "title": "New Aurelia Component"
      },
      {
        "command": "new-aurelia-component.folderCreate",
        "title": "New Aurelia Component Folder"
      },
      {
        "command": "new-aurelia-component.delete",
        "title": "Delete Aurelia Component"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "title": "New Aurelia Component",
          "command": "new-aurelia-component.create",
          "group": "Aurelia@1"
        },
        {
          "when": "explorerResourceIsFolder",
          "title": "New Aurelia Component Folder",
          "command": "new-aurelia-component.folderCreate",
          "group": "Aurelia@2"
        },
        {
          "when": "resourceScheme == 'file' && !explorerResourceIsFolder",
          "title": "Delete Aurelia Component",
          "command": "new-aurelia-component.delete",
          "group": "Aurelia@3"
        }
      ]
    },
    "snippets": [
      {
        "language": "html",
        "path": "./snippets/aurelia-components.json"
      }
    ],
    "configuration": {
      "title": "New Aurelia Component",
      "properties": {
        "newAureliaComponent.fileTypes": {
          "type": "array",
          "default": [
            {
              "ext": ".ts",
              "namingCase": "PascalCase"
            },
            {
              "ext": ".html",
              "namingCase": "kebab-case"
            },
            {
              "ext": ".less",
              "namingCase": "kebab-case"
            }
          ],
          "description": "File types to generate for each Aurelia component",
          "items": {
            "type": "object",
            "properties": {
              "ext": {
                "type": "string",
                "description": "File extension"
              },
              "namingCase": {
                "type": "string",
                "enum": [
                  "PascalCase",
                  "kebab-case"
                ],
                "description": "Naming convention for the file"
              }
            }
          }
        },
        "newAureliaComponent.toDeleteExtensions": {
          "type": "array",
          "default": [
            ".ts",
            ".less",
            ".html",
            ".js",
            ".css",
            ".js.map"
          ],
          "description": "File extensions to delete"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-templates",
    "copy-templates": "pwsh -Command \"Copy-Item -Path 'src/template/*' -Destination 'out/template/' -Force\"",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}